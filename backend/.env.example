# Example environment file for backend
# Copy this to .env and update with your actual credentials

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Green API Configuration  
WHATSAPP_API_TOKEN=your_green_api_token_here
WHATSAPP_INSTANCE_ID=your_green_api_instance_id_here

# Email Configuration (Gmail example)
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=HydroLake Insight <your.email@gmail.com>

# Database Configuration (Optional - for MongoDB)
MONGODB_URI=mongodb://localhost:27017/hydrolake
DATABASE_URL=mongodb://localhost:27017/hydrolake

# JWT Secret for Authentication
JWT_SECRET=your_super_secure_random_string_here

# Environment
NODE_ENV=development
PORT=5000

# External APIs
WEATHER_API_KEY=your_openweather_api_key
MAPS_API_KEY=your_google_maps_api_key

# Alert System Configuration
ALERT_RATE_LIMIT=100
EMERGENCY_CONTACTS=+911234567890,+919876543210

# Logging
LOG_LEVEL=info
LOG_FILE=logs/hydrolake.log
